<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Trainers Show</title>
    <style>
      body{
        font-family: arial;
      }
      table, tr, td{
        padding: 10px;
        border: 1px solid #000;
        border-collapse: collapse;
      }
      thead{
        background-color: #f5f5f5;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Trainer <%= trainerProfile.name %></h1>
    <p><a href="/trainers">Back</a></p>
    <br>
    <table>
      <thead>
        <tr>
          <td>ID</td>
          <td>NAME</td>
          <td>COMBAT POWER</td>
          <td>IN GYM</td>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<thisTrainersPokemon.length; i++){ %>
          <tr>
            <td><%= thisTrainersPokemon[i].id %></td>
            <td><%= thisTrainersPokemon[i].name %></td>
            <td><%= thisTrainersPokemon[i].cp %></td>
            <td><%= thisTrainersPokemon[i].in_gym %></td>
          </tr>
        <% } %>
      </tbody>
    </table>






  </body>
</html>
