<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pokemon</title>
    <style>
      body{
        font-family: arial;
      }
      table, tr, td{
        padding: 10px;
        border: 1px solid #000;
        border-collapse: collapse;
      }
      thead{
        background-color: #f5f5f5;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>All Pokemons</h1>
    <br>
    <p><a href="/newpokemon">Add Pokemon</a> |
      <a href="/trainers">Trainers</a> |
      <a href="/gym">Gym</a>
    </p>

    <br>
    <br>
    <table>
      <thead>
        <tr>
          <td>ID</td>
          <td>NAME</td>
          <td>COMBAT POWER</td>
          <td>IN GYM</td>
          <td>TRAINER ID</td>
          <td>ACTION</td>
          <td>EDIT</td>
          <td>DELETE</td>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<pokemonList.length; i++){ %>
          <tr>
            <td><%= pokemonList[i].id %></td>
            <td><a href="/showpage/<%= pokemonList[i].id %>">
              <%= pokemonList[i].name %></a></td>
            <td><%= pokemonList[i].cp %></td>
            <td><%= pokemonList[i].in_gym %></td>
            <td><%= pokemonList[i].trainer_id %></td>


            <% if(!pokemonList[i].in_gym && gym.length < 2){ %>

              <td><a class="atg" href="/addtogym/<%= pokemonList[i].id %>">Assign to Gym</a></td>

              


            <% } else {%>

            <td><a class="rfg" href="/removefromgym/<%= pokemonList[i].id %>">Remove from gym</a></td>

            <% } %>









            <td><a href="/editpokemon/<%= pokemonList[i].id %>">Edit</a></td>
            <td><a href="/delete/<%= pokemonList[i].id %>">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
  <script src="/js/pokemon.js"></script>
  </body>
</html>
